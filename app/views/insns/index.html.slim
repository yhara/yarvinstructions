- @insns.each.with_index do |i, idx|
  div.insn
    a name="#{i.name}"
    h3.insn_header
      = link_to "#{idx+1}. #{i.name}", "insns/#{i.name}"
    == render :partial => "insn", :locals => {:i => i, :idx => idx}


javascript:
  $(function(){
    $(".ccode0").click(function(e){
      var id = e.target.id;
      $("#"+id).toggle();
      $("#"+id+"_all").toggle();
    });
    $(".ccode1").click(function(e){
      var id = e.target.id.replace(/_all/, "");
      $("#"+id).toggle();
      $("#"+id+"_all").toggle();
    });
  });
